<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageSol"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvIdSolicitud"
            android:layout_toRightOf="@+id/imageSol"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvUsuarioSol"
            android:layout_below="@+id/tvIdSolicitud"
            android:layout_toRightOf="@id/imageSol" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/tvTipoSolicitud"
            android:layout_below="@+id/tvUsuarioSol"
            android:layout_toRightOf="@id/imageSol" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/responder"
            android:id="@+id/tvOptionResponder"
            android:layout_below="@+id/tvTipoSolicitud"
            android:layout_toRightOf="@id/imageSol"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_marginLeft="40dp"
            android:layout_marginTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/ver"
            android:id="@+id/tvOptionver"
            android:textColor="@color/accent"
            android:layout_below="@+id/tvTipoSolicitud"
            android:layout_toRightOf="@id/tvOptionResponder"
            android:textStyle="normal|bold" />



    </RelativeLayout>
</android.support.v7.widget.CardView>